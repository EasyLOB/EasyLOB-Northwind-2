@model LookupModel

@*
    @(Model.ValueId)_LookupButton
    @(Model.ValueId)_LookupText
    @(Model.ValueId)_LookupModal
        @(Model.ValueId)_LookupLabel
        @(Model.ValueId)_LookupGrid
            actionFailure_@(Model.ValueId)_LookupGrid()
            load_@(Model.ValueId)_LookupGrid()
            rowSelected_@(Model.ValueId)_LookupGrid()
*@

@{
    string CSHTML = "_EmployeeLookup.cshtml";
}

<div class="@AppDefaults.CssClassLookup">
    <span class="input-group-addon z-lookupButton"><img id="@(Model.ValueId)_LookupButton" class="z-buttonLookup" /></span>
    @Html.TextBox(Model.ValueId + "_LookupText", Model.Text, new { @class = @AppDefaults.CssClassEditorLookup })
</div>

<div id="@(Model.ValueId)_LookupModal" aria-labelledby="@(Model.ValueId)_LookupLabel" class="modal fade col-md-10" role="dialog" tabindex="-1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-label="@PresentationResources.Cancel" class="close" data-dismiss="modal" type="button"><span aria-hidden="true">&times;</span></button>
                <h4 id="@(Model.ValueId)_LookupLabel" class="modal-title">@EmployeeResources.EntityPlural</h4>
            </div>
            <div class="modal-body">

                @(Html.EJ().Grid<Employee>(Model.ValueId + "_LookupGrid")
                    //.Datasource(datasource => datasource
                    //    .Adaptor(AdaptorType.UrlAdaptor)
                    //    .URL(Url.Action("DataSource", "Employee"))
                    //)
                    .Query(Model.Query)
                    .AllowFiltering()
                    .AllowPaging()
                    .AllowReordering()
                    //.AllowResizeToFit()
                    .AllowResizing()
                    //.AllowScrolling()
                    .AllowSearching()
                    .AllowSorting()
                    .AllowTextWrap()
                    .TextWrapSettings(wrap =>
                    {
                        wrap.WrapMode(WrapMode.Both);
                    })
                    .ClientSideEvents(clientEvent => clientEvent
                        .ActionFailure("actionFailure_" + Model.ValueId + "_LookupGrid")
                        .Load("load_" + Model.ValueId + "_LookupGrid")
                        .RowSelected("rowSelected_" + Model.ValueId + "_LookupGrid")                       
                        .ToolbarClick("toolbarClick_" + Model.ValueId + "_LookupGrid")
                    )
                    .Columns(column =>
                    {
                        column.Field("EmployeeId")
                            .AllowEditing(false)
                            .Type("number")
                            .EditType(EditingType.NumericEdit)
                            .Format(SyncfusionPatternResources.GridFormat_Integer)
                            .HeaderText(EmployeeResources.PropertyEmployeeId)
                            .IsIdentity(true)
                            .IsPrimaryKey(true)
                            .TextAlign(TextAlign.Right)
                            .Visible(Employee.Profile.IsGridVisibleFor("EmployeeId"))
                            .Width(Employee.Profile.GridWidthFor("EmployeeId"))
                            .Add();
                        column.Field("LastName")
                            .Type("string")
                            .EditType(EditingType.StringEdit)
                            .HeaderText(EmployeeResources.PropertyLastName)
                            .Visible(Employee.Profile.IsGridVisibleFor("LastName"))
                            .Width(Employee.Profile.GridWidthFor("LastName"))
                            .Add();
                        column.Field("FirstName")
                            .Type("string")
                            .EditType(EditingType.StringEdit)
                            .HeaderText(EmployeeResources.PropertyFirstName)
                            .Visible(Employee.Profile.IsGridVisibleFor("FirstName"))
                            .Width(Employee.Profile.GridWidthFor("FirstName"))
                            .Add();
                        column.Field("Title")
                            .Type("string")
                            .EditType(EditingType.StringEdit)
                            .HeaderText(EmployeeResources.PropertyTitle)
                            .Visible(Employee.Profile.IsGridVisibleFor("Title"))
                            .Width(Employee.Profile.GridWidthFor("Title"))
                            .Add();
                        column.Field("TitleOfCourtesy")
                            .Type("string")
                            .EditType(EditingType.StringEdit)
                            .HeaderText(EmployeeResources.PropertyTitleOfCourtesy)
                            .Visible(Employee.Profile.IsGridVisibleFor("TitleOfCourtesy"))
                            .Width(Employee.Profile.GridWidthFor("TitleOfCourtesy"))
                            .Add();
                        column.Field("BirthDate")
                            .Type("datetime")
                            .EditType(EditingType.DateTimePicker)
                            .Format(SyncfusionPatternResources.GridFormat_DateTime)
                            .HeaderText(EmployeeResources.PropertyBirthDate)
                            .Visible(Employee.Profile.IsGridVisibleFor("BirthDate"))
                            .Width(Employee.Profile.GridWidthFor("BirthDate"))
                            .Add();
                        column.Field("HireDate")
                            .Type("datetime")
                            .EditType(EditingType.DateTimePicker)
                            .Format(SyncfusionPatternResources.GridFormat_DateTime)
                            .HeaderText(EmployeeResources.PropertyHireDate)
                            .Visible(Employee.Profile.IsGridVisibleFor("HireDate"))
                            .Width(Employee.Profile.GridWidthFor("HireDate"))
                            .Add();
                        column.Field("Address")
                            .Type("string")
                            .EditType(EditingType.StringEdit)
                            .HeaderText(EmployeeResources.PropertyAddress)
                            .Visible(Employee.Profile.IsGridVisibleFor("Address"))
                            .Width(Employee.Profile.GridWidthFor("Address"))
                            .Add();
                        column.Field("City")
                            .Type("string")
                            .EditType(EditingType.StringEdit)
                            .HeaderText(EmployeeResources.PropertyCity)
                            .Visible(Employee.Profile.IsGridVisibleFor("City"))
                            .Width(Employee.Profile.GridWidthFor("City"))
                            .Add();
                        column.Field("Region")
                            .Type("string")
                            .EditType(EditingType.StringEdit)
                            .HeaderText(EmployeeResources.PropertyRegion)
                            .Visible(Employee.Profile.IsGridVisibleFor("Region"))
                            .Width(Employee.Profile.GridWidthFor("Region"))
                            .Add();
                        column.Field("PostalCode")
                            .Type("string")
                            .EditType(EditingType.StringEdit)
                            .HeaderText(EmployeeResources.PropertyPostalCode)
                            .Visible(Employee.Profile.IsGridVisibleFor("PostalCode"))
                            .Width(Employee.Profile.GridWidthFor("PostalCode"))
                            .Add();
                        column.Field("Country")
                            .Type("string")
                            .EditType(EditingType.StringEdit)
                            .HeaderText(EmployeeResources.PropertyCountry)
                            .Visible(Employee.Profile.IsGridVisibleFor("Country"))
                            .Width(Employee.Profile.GridWidthFor("Country"))
                            .Add();
                        column.Field("HomePhone")
                            .Type("string")
                            .EditType(EditingType.StringEdit)
                            .HeaderText(EmployeeResources.PropertyHomePhone)
                            .Visible(Employee.Profile.IsGridVisibleFor("HomePhone"))
                            .Width(Employee.Profile.GridWidthFor("HomePhone"))
                            .Add();
                        column.Field("Extension")
                            .Type("string")
                            .EditType(EditingType.StringEdit)
                            .HeaderText(EmployeeResources.PropertyExtension)
                            .Visible(Employee.Profile.IsGridVisibleFor("Extension"))
                            .Width(Employee.Profile.GridWidthFor("Extension"))
                            .Add();
                        column.Field("Photo")
                            .Type("string")
                            .EditType(EditingType.StringEdit)
                            .HeaderText(EmployeeResources.PropertyPhoto)
                            .Visible(Employee.Profile.IsGridVisibleFor("Photo"))
                            .Width(Employee.Profile.GridWidthFor("Photo"))
                            .Add();
                        column.Field("Notes")
                            .Type("string")
                            .EditType(EditingType.StringEdit)
                            .HeaderText(EmployeeResources.PropertyNotes)
                            .Visible(Employee.Profile.IsGridVisibleFor("Notes"))
                            .Width(Employee.Profile.GridWidthFor("Notes"))
                            .Add();
                        column.Field("ReportsTo")
                            .Type("number")
                            .EditType(EditingType.NumericEdit)
                            .Format(SyncfusionPatternResources.GridFormat_Integer)
                            .HeaderText(EmployeeResources.PropertyReportsTo)
                            .TextAlign(TextAlign.Right)
                            .Visible(Employee.Profile.IsGridVisibleFor("ReportsTo"))
                            .Width(Employee.Profile.GridWidthFor("ReportsTo"))
                            .Add();
                        column.Field("EmployeeLookupText")
                            .AllowEditing(false)
                            .Type("string")
                            .HeaderText(EmployeeResources.EntitySingular)
                            .Visible(Employee.Profile.IsGridVisibleFor("EmployeeLookupText"))
                            .Width(Employee.Profile.GridWidthFor("EmployeeLookupText"))
                            .Add();
                        column.Field("PhotoPath")
                            .Type("string")
                            .EditType(EditingType.StringEdit)
                            .HeaderText(EmployeeResources.PropertyPhotoPath)
                            .Visible(Employee.Profile.IsGridVisibleFor("PhotoPath"))
                            .Width(Employee.Profile.GridWidthFor("PhotoPath"))
                            .Add();
                    })
                    //.EnablePersistence()
                    .IsResponsive()
                    .FilterSettings(filter => filter
                        .EnableCaseSensitivity(false)
                        .FilterType(FilterType.Excel)
                        .MaxFilterChoices(AppDefaults.SyncfusionRecordsForFiltering)
                    )
                    .PageSettings(page => page
                        .PageSize(AppDefaults.SyncfusionRecordsByPage)
                    )
                    .ShowColumnChooser()
                    .ToolbarSettings(toolbar => toolbar
                        .CustomToolbarItems(new List<object>() {
                            new Syncfusion.JavaScript.Models.CustomToolbarItem() { TemplateID = "#" + Model.ValueId + "_LookupGrid_Toolbar" }
                        })
                        .ShowToolbar()
                        .ToolbarItems(items =>
                        {
                            items.AddTool(ToolBarItems.Search);
                        })
                    )
                )

                <div class="z-formButtons">
                    @Html.ZImage("Button_Clear", "btn z-buttonClear", PresentationResources.Clear, "clear_" + Model.ValueId + "()")
                </div>

            </div>
        </div>
    </div>
</div>

<script type="text/x-jsrender" id="@(Model.ValueId)_LookupGrid_Toolbar">
    <div id="@(Model.ValueId)_LookupGrid_Toolbar_Refresh" class="e-toolbaricons e-icon e-reload" title="@PresentationResources.Refresh"></div>
</script>

<script>
    $(function () {
        try {
            var model = @Html.Raw(JsonConvert.SerializeObject(Model));
            var profile = @Html.Raw(JsonConvert.SerializeObject(Employee.Profile));

            $("#@Model.ValueId").hide();

            $("#@(Model.ValueId)_LookupButton").click(function () {
                zGridDataSource("@(Model.ValueId + "_LookupGrid")", "@Url.Action("DataSource", "Employee")", true);

                $("#@(Model.ValueId)_LookupGrid_@(Model.ValueId)_LookupGrid_Toolbar").removeAttr("data-content");

                $("#@(Model.ValueId)_LookupModal").modal("show");
            });

            $("#@(Model.ValueId)_LookupText").prop("readonly", true);
            $("#@(Model.ValueId)_LookupText").val(model.Text.toLocaleString("@CultureInfo.CurrentCulture.Name"));

            $("#@(Model.ValueId)_LookupModal").modal("hide");

            $("#@(Model.ValueId)_LookupGrid_@(Model.ValueId)_LookupGrid_Toolbar").removeAttr("data-content");

            @*
            var ejGrid = zGrid("@(Model.ValueId)_LookupGrid");
            zOnLookupView(model, profile, ejGrid);
            *@
        } catch (exception) {
            zAlert(zExceptionMessage("@CSHTML", "function", exception));
        }
    });

    function actionFailure_@(Model.ValueId)_LookupGrid(args) {
        try {
            zAlert(args.error.responseText);
        } catch (exception) {
            zAlert(zExceptionMessage("@CSHTML", "actionFailure_@(Model.ValueId)_LookupGrid", exception));
        }
    }    

    function clear_@(Model.ValueId)() {
        try {
            $("#@(Model.ValueId)").val("").change();

            $("#@(Model.ValueId)_LookupText").val("").change();

            $("#@(Model.ValueId)_LookupModal").modal("hide");
        } catch (exception) {
            zAlert(zExceptionMessage("@CSHTML", "clear_@(Model.ValueId)", exception));
        }
    }

    function load_@(Model.ValueId)_LookupGrid(args) {
        try {            
            var culture = "@System.Globalization.CultureInfo.CurrentCulture.Name";
            this.model.locale = culture;

            var model = @Html.Raw(JsonConvert.SerializeObject(Model));
            var profile = @Html.Raw(JsonConvert.SerializeObject(Employee.Profile));
            zOnLookupView(model, profile, this);
        } catch (exception) {
            zAlert(zExceptionMessage("@CSHTML", "load_@(Model.ValueId)_LookupGrid", exception));
        }
    }

    function rowSelected_@(Model.ValueId)_LookupGrid(args) {
        try {
            var data = this.model.currentViewData[args.rowIndex];
    
            $("#@(Model.ValueId)").val(data.EmployeeId).change();
    
            $("#@(Model.ValueId)_LookupText").val(data.LookupText).change();

            var model = @Html.Raw(JsonConvert.SerializeObject(Model));
            var culture = "@System.Globalization.CultureInfo.CurrentCulture.Name";
            zLookupElements(data, model.Elements, culture);
    
            $("#@(Model.ValueId)_LookupModal").modal("hide");
        } catch (exception) {
            zAlert(zExceptionMessage("@CSHTML", "rowSelected_@(Model.ValueId)_LookupGrid", exception));
        }
    }

    function toolbarClick_@(Model.ValueId)_LookupGrid(sender) {
        try {
            var toolbar = $(sender.target);
            var ejGrid = zGrid("@(Model.ValueId)_LookupGrid");

            if (toolbar.prop("id") == "@(Model.ValueId)_LookupGrid_Toolbar_Refresh") {
                ejGrid.refreshContent();
            }
        } catch (exception) {
            zAlert(zExceptionMessage("@CSHTML", "toolbarClick_@(Model.ValueId)_LookupGrid", exception));
        }
    }
</script>