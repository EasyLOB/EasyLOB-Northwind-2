@model EmployeeCollectionModel

@{
    string CSHTML = "_EmployeeCollection.cshtml";

    string query = "";
    if (Model.MasterReportsTo != null)
    {
        query = String.Format("ej.Query().where(\"ReportsTo\", ej.FilterOperators.equal, {0})", Model.MasterReportsTo);
    }
}

