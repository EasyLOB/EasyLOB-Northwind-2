@model ResetPasswordViewModel

<h2>@AuthenticationResources.ResetPassword</h2>
<hr />

@using (Html.BeginForm("ResetPassword", "Authentication", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.Code)

    <div class="@AppDefaults.CssClassForm" style="margin-left: 16px;">

        <div class="@AppDefaults.CssClassGroup col-md-3">
            @Html.LabelFor(model => model.Email, new { @class = AppDefaults.CssClassLabelRequired })
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = AppDefaults.CssClassEditor } })
        </div>

        @Html.ZNewLine()

        <div class="@AppDefaults.CssClassGroup col-md-3">
            @Html.LabelFor(model => model.Password, new { @class = AppDefaults.CssClassLabelRequired })
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = AppDefaults.CssClassEditor, @type = "password" } })
        </div>

        @Html.ZNewLine()

        <div class="@AppDefaults.CssClassGroup col-md-3">
            @Html.LabelFor(model => model.ConfirmPassword, new { @class = AppDefaults.CssClassLabelRequired })
            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = AppDefaults.CssClassEditor, @type = "password" } })
        </div>

        @Html.ZNewLine()

    </div>

    <br />
    <div class="@AppDefaults.CssClassFormButtons" style="margin-left: -16px;">
        <input type="submit" value="@PresentationResources.OK" class="btn btn-default col-md-3" />
    </div>
}
