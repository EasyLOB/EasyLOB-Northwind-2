@model LookupModel

@*
    @(Model.ValueId)_LookupButton
    @(Model.ValueId)_LookupText
    @(Model.ValueId)_LookupModal
        @(Model.ValueId)_LookupLabel
        @(Model.ValueId)_LookupGrid
            actionFailure_@(Model.ValueId)_LookupGrid()
            load_@(Model.ValueId)_LookupGrid()
            rowSelected_@(Model.ValueId)_LookupGrid()
*@

@{
    string CSHTML = "_UserLookup.cshtml";
}

<div class="@AppDefaults.CssClassLookup">
    <span class="input-group-addon z-lookupButton"><img id="@(Model.ValueId)_LookupButton" class="z-buttonLookup" /></span>
    @Html.TextBox(Model.ValueId + "_LookupText", Model.Text, new { @class = @AppDefaults.CssClassEditorLookup })
</div>

<div id="@(Model.ValueId)_LookupModal" aria-labelledby="@(Model.ValueId)_LookupLabel" class="modal fade col-md-10" role="dialog" tabindex="-1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-label="@PresentationResources.Cancel" class="close" data-dismiss="modal" type="button"><span aria-hidden="true">&times;</span></button>
                <h4 id="@(Model.ValueId)_LookupLabel" class="modal-title">@UserResources.EntityPlural</h4>
            </div>
            <div class="modal-body">

                @(Html.EJ().Grid<User>(Model.ValueId + "_LookupGrid")
                    //.Datasource(datasource => datasource
                    //    .Adaptor(AdaptorType.UrlAdaptor)
                    //    .URL(Url.Action("DataSource", "User"))
                    //)
                    .Query(Model.Query)
                    .AllowFiltering()
                    .AllowPaging()
                    .AllowReordering()
                    //.AllowResizeToFit()
                    .AllowResizing()
                    //.AllowScrolling()
                    .AllowSearching()
                    .AllowSorting()
                    .AllowTextWrap()
                    .TextWrapSettings(wrap =>
                    {
                        wrap.WrapMode(WrapMode.Both);
                    })
                    .ClientSideEvents(clientEvent => clientEvent
                        .ActionFailure("actionFailure_" + Model.ValueId + "_LookupGrid")
                        .Load("load_" + Model.ValueId + "_LookupGrid")
                        .RowSelected("rowSelected_" + Model.ValueId + "_LookupGrid")                       
                        .ToolbarClick("toolbarClick_" + Model.ValueId + "_LookupGrid")
                    )
                    .Columns(column =>
                    {
						column.Field("Id")
							.EditType(EditingType.String)
							.HeaderText(UserResources.PropertyId)
							.IsPrimaryKey(true)
							.Visible(EasyLOB.Identity.Data.User.Profile.IsGridVisibleFor("Id")) // !?!
							.Width(EasyLOB.Identity.Data.User.Profile.GridWidthFor("Id")) // !?!
							.Add();
						column.Field("Email")
							.EditType(EditingType.String)
							.HeaderText(UserResources.PropertyEmail)
							.Visible(EasyLOB.Identity.Data.User.Profile.IsGridVisibleFor("Email")) // !?!
							.Width(EasyLOB.Identity.Data.User.Profile.GridWidthFor("Email")) // !?!
							.Add();
						column.Field("EmailConfirmed")
							.EditType(EditingType.Boolean)
							.HeaderText(UserResources.PropertyEmailConfirmed)
							.Visible(EasyLOB.Identity.Data.User.Profile.IsGridVisibleFor("EmailConfirmed")) // !?!
							.Width(EasyLOB.Identity.Data.User.Profile.GridWidthFor("EmailConfirmed")) // !?!
							.Add();
						column.Field("PasswordHash")
							.EditType(EditingType.String)
							.HeaderText(UserResources.PropertyPasswordHash)
							.Visible(EasyLOB.Identity.Data.User.Profile.IsGridVisibleFor("PasswordHash")) // !?!
							.Width(EasyLOB.Identity.Data.User.Profile.GridWidthFor("PasswordHash")) // !?!
							.Add();
						column.Field("SecurityStamp")
							.EditType(EditingType.String)
							.HeaderText(UserResources.PropertySecurityStamp)
							.Visible(EasyLOB.Identity.Data.User.Profile.IsGridVisibleFor("SecurityStamp")) // !?!
							.Width(EasyLOB.Identity.Data.User.Profile.GridWidthFor("SecurityStamp")) // !?!
							.Add();
						column.Field("PhoneNumber")
							.EditType(EditingType.String)
							.HeaderText(UserResources.PropertyPhoneNumber)
							.Visible(EasyLOB.Identity.Data.User.Profile.IsGridVisibleFor("PhoneNumber")) // !?!
							.Width(EasyLOB.Identity.Data.User.Profile.GridWidthFor("PhoneNumber")) // !?!
							.Add();
						column.Field("PhoneNumberConfirmed")
							.EditType(EditingType.Boolean)
							.HeaderText(UserResources.PropertyPhoneNumberConfirmed)
							.Visible(EasyLOB.Identity.Data.User.Profile.IsGridVisibleFor("PhoneNumberConfirmed")) // !?!
							.Width(EasyLOB.Identity.Data.User.Profile.GridWidthFor("PhoneNumberConfirmed")) // !?!
							.Add();
						column.Field("TwoFactorEnabled")
							.EditType(EditingType.Boolean)
							.HeaderText(UserResources.PropertyTwoFactorEnabled)
							.Visible(EasyLOB.Identity.Data.User.Profile.IsGridVisibleFor("TwoFactorEnabled")) // !?!
							.Width(EasyLOB.Identity.Data.User.Profile.GridWidthFor("TwoFactorEnabled")) // !?!
							.Add();
						column.Field("LockoutEndDateUtc")
							.EditType(EditingType.DateTimePicker)
							.Format(SyncfusionPatternResources.GridFormat_DateTime)
							.HeaderText(UserResources.PropertyLockoutEndDateUtc)
							.Visible(EasyLOB.Identity.Data.User.Profile.IsGridVisibleFor("LockoutEndDateUtc")) // !?!
							.Width(EasyLOB.Identity.Data.User.Profile.GridWidthFor("LockoutEndDateUtc")) // !?!
							.Add();
						column.Field("LockoutEnabled")
							.EditType(EditingType.Boolean)
							.HeaderText(UserResources.PropertyLockoutEnabled)
							.Visible(EasyLOB.Identity.Data.User.Profile.IsGridVisibleFor("LockoutEnabled")) // !?!
							.Width(EasyLOB.Identity.Data.User.Profile.GridWidthFor("LockoutEnabled")) // !?!
							.Add();
						column.Field("AccessFailedCount")
							.EditType(EditingType.Numeric)
							.Format(SyncfusionPatternResources.GridFormat_Integer)
							.HeaderText(UserResources.PropertyAccessFailedCount)
							.TextAlign(TextAlign.Right)
							.Visible(EasyLOB.Identity.Data.User.Profile.IsGridVisibleFor("AccessFailedCount")) // !?!
							.Width(EasyLOB.Identity.Data.User.Profile.GridWidthFor("AccessFailedCount")) // !?!
							.Add();
						column.Field("UserName")
							.EditType(EditingType.String)
							.HeaderText(UserResources.PropertyUserName)
							.Visible(EasyLOB.Identity.Data.User.Profile.IsGridVisibleFor("UserName")) // !?!
							.Width(EasyLOB.Identity.Data.User.Profile.GridWidthFor("UserName")) //  !?!
							.Add();
                    })
                    //.EnablePersistence()
                    .IsResponsive()
                    .FilterSettings(filter => filter
                        .EnableCaseSensitivity(false)
                        .FilterType(FilterType.Excel)
                        .MaxFilterChoices(AppDefaults.SyncfusionRecordsForFiltering)
                    )
                    .PageSettings(page => page
                        .PageSize(AppDefaults.SyncfusionRecordsByPage)
                    )
                    .ShowColumnChooser()
                    .ToolbarSettings(toolbar => toolbar
                        .CustomToolbarItems(new List<object>() {
                            new Syncfusion.JavaScript.Models.CustomToolbarItem() { TemplateID = "#" + Model.ValueId + "_LookupGrid_Toolbar" }
                        })
                        .ShowToolbar()
                        .ToolbarItems(items =>
                        {
                            items.AddTool(ToolBarItems.Search);
                        })
                    )
                )

                <div class="z-formButtons">
                    @Html.ZImage("Button_Clear", "btn z-buttonClear", PresentationResources.Clear, "clear_" + Model.ValueId + "()")
                </div>

            </div>
        </div>
    </div>
</div>

<script type="text/x-jsrender" id="@(Model.ValueId)_LookupGrid_Toolbar">
    <div id="@(Model.ValueId)_LookupGrid_Toolbar_Refresh" class="e-toolbaricons e-icon e-reload" title="@PresentationResources.Refresh"></div>
</script>

<script>
    $(function () {
        try {
            var model = @Html.Raw(JsonConvert.SerializeObject(Model));
            var profile = @Html.Raw(JsonConvert.SerializeObject(EasyLOB.Identity.Data.User.Profile)); // !?!

            $("#@Model.ValueId").hide();

            $("#@(Model.ValueId)_LookupButton").click(function () {
                zGridDataSource("@(Model.ValueId + "_LookupGrid")", "@Url.Action("DataSource", "User")", true);

                $("#@(Model.ValueId)_LookupGrid_@(Model.ValueId)_LookupGrid_Toolbar").removeAttr("data-content");

                $("#@(Model.ValueId)_LookupModal").modal("show");
            });

            $("#@(Model.ValueId)_LookupText").prop("readonly", true);
            $("#@(Model.ValueId)_LookupText").val(model.Text.toLocaleString("@CultureInfo.CurrentCulture.Name"));

            $("#@(Model.ValueId)_LookupModal").modal("hide");

            $("#@(Model.ValueId)_LookupGrid_@(Model.ValueId)_LookupGrid_Toolbar").removeAttr("data-content");

            @*
            var ejGrid = zGrid("@(Model.ValueId + "_LookupGrid")");
            zOnLookupView(model, profile, ejGrid);
            *@
        } catch (exception) {
            zAlert(zExceptionMessage("@CSHTML", "function", exception));
        }
    });

    function actionFailure_@(Model.ValueId)_LookupGrid(args) {
        try {
            zAlert(args.error.responseText);
        } catch (exception) {
            zAlert(zExceptionMessage("@CSHTML", "actionFailure_@(Model.ValueId)_LookupGrid", exception));
        }
    }    

    function clear_@(Model.ValueId)() {
        try {
            $("#@(Model.ValueId)").val("").change();

            $("#@(Model.ValueId)_LookupText").val("").change();

            $("#@(Model.ValueId)_LookupModal").modal("hide");
        } catch (exception) {
            zAlert(zExceptionMessage("@CSHTML", "clear_@(Model.ValueId)", exception));
        }
    }

    function load_@(Model.ValueId)_LookupGrid(args) {
        try {            
            var culture = "@System.Globalization.CultureInfo.CurrentCulture.Name";
            this.model.locale = culture;

            var model = @Html.Raw(JsonConvert.SerializeObject(Model));
            var profile = @Html.Raw(JsonConvert.SerializeObject(EasyLOB.Identity.Data.User.Profile)); // !?!
            zOnLookupView(model, profile, this);
        } catch (exception) {
            zAlert(zExceptionMessage("@CSHTML", "load_@(Model.ValueId)_LookupGrid", exception));
        }
    }

    function rowSelected_@(Model.ValueId)_LookupGrid(args) {
        try {
            var data = this.model.currentViewData[args.rowIndex];
    
            $("#@(Model.ValueId)").val(data.Id).change();
    
            $("#@(Model.ValueId)_LookupText").val(data.LookupText).change();

            var model = @Html.Raw(JsonConvert.SerializeObject(Model));
            var culture = "@System.Globalization.CultureInfo.CurrentCulture.Name";
            zLookupElements(data, model.Elements, culture);
    
            $("#@(Model.ValueId)_LookupModal").modal("hide");
        } catch (exception) {
            zAlert(zExceptionMessage("@CSHTML", "rowSelected_@(Model.ValueId)_LookupGrid", exception));
        }
    }

    function toolbarClick_@(Model.ValueId)_LookupGrid(sender) {
        try {
            var toolbar = $(sender.target);
            var ejGrid = zGrid("@(Model.ValueId + "_LookupGrid")");

            if (toolbar.prop("id") == "@(Model.ValueId)_LookupGrid_Toolbar_Refresh") {
                ejGrid.refreshContent();
            }
        } catch (exception) {
            zAlert(zExceptionMessage("@CSHTML", "toolbarClick_@(Model.ValueId)_LookupGrid", exception));
        }
    }
</script>